        //disable submit if both at least one text area is empty.
        function checkTextAreaData() {
            const areaOne = document.getElementById('text-source')
            const areaTwo = document.getElementById('text-target')

            if (areaOne.value && areaTwo.value) {
                //startLoader();
                document.getElementById('text_id').submit()
            }
        }
        //Submit the form once both input type of file have file inputs
        function checkData() {
            const firstFile = document.getElementById('myfile')
            const secondFile = document.getElementById('myOtherfile')

            if (firstFile.value && secondFile.value) {
                document.getElementById('text_id').submit();
            }
        }

        function startLoader() {
            document.getElementById("loader").style.display = "flex";
            document.getElementById("nav-div").style.display = "none";
            document.getElementById("standard-check").style.display = "none";
            document.getElementById("web-check").style.display = "none";
            document.getElementById("traslator").style.display = "none";
            document.getElementById("contact").style.display = "none";
        }

        function stopLoader() {
            document.getElementById("loader").style.display = "none";
            document.getElementById("nav-div").style.display = "block";
            document.getElementById("standard-check").style.display = "block";
            document.getElementById("web-check").style.display = "block";
